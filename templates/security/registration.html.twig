{% extends "base.html.twig" %}

{% block body %}
    <h1>Inscription</h1>
    {{ form_start(form) }}
        
        {{ form_row(form.username,{'label':'Nom d\'utilisateur','attr': {'placeholder':'Login'} }) }}
        {{ form_row(form.email,{'attr': {'placeholder':'Email'} }) }}
        {{ form_row(form.password,{'label':'Mot de passe','attr': {'placeholder':'Mot de passe'} }) }}
        {{ form_row(form.confirm_password,{'label':'Confirmer votre mot de passe','attr': {'placeholder':'Confirmer votre mot de passe'} }) }}
        <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}