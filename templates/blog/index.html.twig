{% extends 'base.html.twig' %}{# herite du squellette de nos pages #}

{# montre l'ensemble de nos article #}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <section class="articles">
        {% for article in articles %}
            <article>
                <h2>{{ article.title }}</h2>
                <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/y') }} à {{ article.createdAt | date('H:i') }}</div>
                <div class="conten">
                    <img src="{{ article.image }}" alt="">
                    {{ article.content | raw}} {# raw est un filtre pour afficher les données comme ils sont sinon les balises p seront affichées #}
                    
                    <a href="{{ path('blog_show',{'id': article.id }) }}" class="btn btn-primary">Lire la suite</a>
                </div>
            </article>
        {% endfor %}    
    </section>
{% endblock %}
